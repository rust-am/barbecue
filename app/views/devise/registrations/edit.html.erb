<div class="container">
  <div class="row">
    <div class=".col-md-6">

      <h3 class="buffer-both"> <%= t('app.field.profile_editing') %></h3>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource, class: "form-control buffer-bottom" %>

        <div class="field">
          <%= f.label :email %><br/>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control buffer-bottom"%>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div><%= t('app.field.waiting_confirmation') %> <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.label :password %> <i>(<%= t('app.field.leave_blank') %>)</i><br/>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          <% if @minimum_password_length %>
            <em> <%= t('app.field.password_length', count: @minimum_password_length) %> </em>
            <br/>
          <% end %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br/>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control buffer-bottom" %>
        </div>

        <div class="field">
          <%= f.label :current_password %> <i>(<%= t('app.field.need_current_password') %>)</i><br/>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control buffer-bottom" %>
        </div>

        <div class="actions">
          <%= f.submit t('app.button.edit_password'), class: "btn btn-primary" %>
        </div>
      <% end %>

      <p><%= button_to t('app.button.cancel_my_account'), registration_path(resource_name), data: {confirm: t('app.field.are_you_sure')}, method: :delete, class: "btn btn-danger" %></p>

      <%= link_to t('app.button.back'), :back, class: "btn btn-secondary buffer-bottom" %>
    </div>
  </div>
</div>
